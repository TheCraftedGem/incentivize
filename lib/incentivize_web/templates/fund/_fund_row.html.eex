<div class="rev-Row u-border-bottom">
  <div class="rev-Col rev-Col--medium6">
    <label class="rev-InputStack InputStack-pledge rev-InputLabel">
      <span>Pledge Amount</span>
      <input class="rev-Input" id="fund_pledges_<%= @index %>_amount" name="fund[pledges][<%= @index %>][amount]" step="0.0001" type="number" value="<%= @amount %>" required>
    </label>
  </div>
  <div class="rev-Col rev-Col--medium5 rev-Col--largeOffset1">
    <label class="rev-InputStack InputStack-pledge rev-InputLabel">
      <strong>Action:</strong>
      <select class="rev-Input" id="fund_pledges_<%= @index %>_action" name="fund[pledges][<%= @index %>][action]" required>
        <option value="">Choose an action</option>
        <%= for {value, key} <- actions_dropdown() do %>
            <option value="<%= key %>" <%= if key == @action, do: "selected", else: nil %>><%= value %></option>
        <% end %>
      </select>
    </label>
  </div>
</div>
